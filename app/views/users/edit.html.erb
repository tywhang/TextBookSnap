<div class="col-sm-6 col-sm-offset-3">
	<h3>Edit User</h3>
	<form action="/users/<%= @user.id %>" method="post" class="form-horizontal">
		<div class="form-group">
			<label for="user[first_name]" class="control-label col-sm-4">First Name</label>
			<div class="col-sm-8">
				<input type="text" class="form-control" value="<%= @user.first_name %>">
			</div>
		</div>
		<div class="form-group">
			<label for="user[last_name]" class="control-label col-sm-4">Last Name</label>
			<div class="col-sm-8">
				<input type="text" class="form-control" value="<%= @user.last_name %>">
			</div>
		</div>
		<div class="form-group">
			<label for="user[email]" class="control-label col-sm-4">Email</label>
			<div class="col-sm-8">
				<input type="text" class="form-control" value="<%= @user.email %>">
			</div>
		</div>
		<div class="form-group">
			<label for="user[password]" class="control-label col-sm-4">Password</label>
			<div class="col-sm-8">
				<input type="password" class="form-control">
			</div>
		</div>
		<div class="form-group">
			<label for="user[password_confirmation]" class="control-label col-sm-4">Confirm Password</label>
			<div class="col-sm-8">
				<input type="password_confirmation" class="form-control">
			</div>
		</div>
		<input type="submit" class="btn btn-default pull-right" value="Submit Changes">
	</form>
</div>